<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="VisQuizDesktop.MainWindow"
        Title="VisQuiz"
        Width="960" Height="540"
        WindowStartupLocation="CenterScreen"
        >
    <Window.Background>
        <LinearGradientBrush StartPoint="10%,0%" EndPoint="90%,100%">
            <GradientStop Color="#2b3421" Offset="0.0"/>
            <GradientStop Color="#151515" Offset="0.3"/>
            <GradientStop Color="#151515" Offset="0.7"/>
            <GradientStop Color="#12202b" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Styles>
        <!-- Globalny styl dla TextBlock -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Comfortaa"/>
        </Style>

        <Style Selector="Border.letters">
            <Setter Property="Background" Value="#333739"/>
        </Style>
        <!-- Styl dla kategorii -->
        <Style Selector="Border.category">
            <Setter Property="Background" Value="#333739"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Border.category:pointerover">
            <Setter Property="Background" Value="#1b75bc"/>
        </Style>

        <!-- Styl dla odpowiedzi -->
        <Style Selector="Border.answer">
            <Setter Property="Background" Value="#333739"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Border.answer:pointerover">
            <Setter Property="Background" Value="#252A4F"/>
        </Style>
    </Window.Styles>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080" Margin="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" 
                       Text="VisQuiz" 
                       FontSize="72" 
                       FontFamily="{StaticResource VisgraphFont}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,60"/>

            <!-- Category Selection View -->
            <Grid x:Name="CategoryPanel" 
                  Grid.Row="1"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center">
                
                <StackPanel Spacing="40">
                    <TextBlock Text="Wybierz zestaw"
                               FontSize="36"
                               Foreground="#8cc747"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"/>

                    <!-- StackPanel dla kategorii (uk³ad horyzontalny) -->
                    <StackPanel x:Name="CategoriesStack"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="20">
                        <!-- Kategorie bêd¹ dodawane dynamicznie -->
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Question View -->
            <Grid x:Name="QuestionPanel" 
                  Grid.Row="1"
                  VerticalAlignment="Center"
                  IsVisible="False">
                
                <StackPanel Spacing="40"
                            MaxWidth="1600"
                            HorizontalAlignment="Center">
                    
                    <TextBlock x:Name="QuestionNumberText"
                               FontSize="32"
                               Foreground="#8cc747"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <!-- Progress Dots -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="15"
                                Margin="0,0,0,20">
                        <Ellipse x:Name="Dot1" Width="20" Height="20" Fill="#8cc747"/>
                        <Ellipse x:Name="Dot2" Width="20" Height="20" Fill="#3A3F5F"/>
                        <Ellipse x:Name="Dot3" Width="20" Height="20" Fill="#3A3F5F"/>
                        <Ellipse x:Name="Dot4" Width="20" Height="20" Fill="#3A3F5F"/>
                        <Ellipse x:Name="Dot5" Width="20" Height="20" Fill="#3A3F5F"/>
                    </StackPanel>

                    <TextBlock x:Name="QuestionText"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,40"/>

                    <Image x:Name="QuestionImage"
                           MaxHeight="400"
                           Margin="0,0,0,40"
                           IsVisible="False"
                           Stretch="Uniform"/>

                    <!-- StackPanel dla odpowiedzi (uk³ad horyzontalny) -->
                    <StackPanel x:Name="AnswersStack"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="20">
                        <!-- Odpowiedzi bêd¹ dodawane dynamicznie -->
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Results View -->
            <StackPanel x:Name="ResultsPanel"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="40"
                        IsVisible="False">
                
<!--                <TextBlock Text="WYNIKI"
                           FontSize="72"
                           FontWeight="Bold"
                           Foreground="#1b75bc"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>-->

                <TextBlock x:Name="CategoryNameText"
                           FontSize="40"
                           Foreground="#8cc747"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <TextBlock x:Name="ScoreText"
                           FontSize="52"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

<!--                <TextBlock x:Name="PercentageText"
                           FontSize="48"
                           Foreground="#8cc747"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>-->

                <TextBlock x:Name="TimeText"
                           FontSize="40"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Przycisk "Graj ponownie" w stylu kategorii -->
                <StackPanel Orientation="Vertical"
                            Spacing="15"
                            HorizontalAlignment="Center">
                    
                    <!-- Border z tekstem (jak kategoria) -->
                    <Border Classes="category"
                            MinWidth="350"
                            MinHeight="200">
                        <Grid>
                            <TextBlock Text="Graj ponownie"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       Padding="10"/>
                        </Grid>
                    </Border>
                    
                    <!-- Etykieta pod boxem (ko³o z liter¹ A) -->
                    <Border Classes="letters"
                            CornerRadius="150"
                            Width="150"
                            Height="150"
                            HorizontalAlignment="Center"
                            Padding="0,10,0,0">
                        <TextBlock Text="A"
                                   FontSize="50"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Progress Dots -->
            <StackPanel x:Name="ProgressDotsPanel"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="15"
                        Margin="0,40,0,0"
                        IsVisible="False">
                <!-- Kropki bêd¹ dodawane dynamicznie -->
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>