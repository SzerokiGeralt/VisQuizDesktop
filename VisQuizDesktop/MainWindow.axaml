<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="VisQuizDesktop.MainWindow"
        Title="VisQuiz"
        Width="960" Height="540"
        WindowStartupLocation="CenterScreen"
        >
    <Window.Background>
        <LinearGradientBrush StartPoint="10%,0%" EndPoint="90%,100%">
            <GradientStop Color="#2b3421" Offset="0.0"/>
            <GradientStop Color="#151515" Offset="0.3"/>
            <GradientStop Color="#151515" Offset="0.7"/>
            <GradientStop Color="#12202b" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Styles>
        <!-- Globalny styl dla TextBlock -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Comfortaa"/>
        </Style>

        <Style Selector="Border.letters">
            <Setter Property="Background" Value="#333739"/>
        </Style>
        
        <!-- Styl dla kategorii -->
        <Style Selector="Border.category">
            <Setter Property="Background" Value="#333739"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Border.category:pointerover">
            <Setter Property="Background" Value="#1b75bc"/>
        </Style>

        <!-- Styl dla odpowiedzi -->
        <Style Selector="Border.answer">
            <Setter Property="Background" Value="#333739"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Border.answer:pointerover">
            <Setter Property="Background" Value="#252A4F"/>
        </Style>
    </Window.Styles>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title - zakotwiczone do góry -->
            <TextBlock Grid.Row="0" 
                       Text="VisQuiz" 
                       FontSize="56" 
                       FontFamily="{StaticResource VisgraphFont}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,20,0,0"/>

            <!-- Category Selection View -->
            <Grid x:Name="CategoryPanel" 
                  Grid.Row="1"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center">
                
                <StackPanel Spacing="25">
                    <TextBlock Text="Wybierz zestaw"
                               FontSize="28"
                               Foreground="#8cc747"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25"/>

                    <StackPanel x:Name="CategoriesStack"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="15">
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Question View - Sta³y uk³ad Grid, pytanie i obrazek wyœrodkowane -->
            <Grid x:Name="QuestionPanel" 
                  Grid.Row="1"
                  IsVisible="False"
                  VerticalAlignment="Center">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>   <!-- Header: Question number + dots -->
                    <RowDefinition Height="*"/>      <!-- Question text + Image - wyœrodkowane, fill -->
                </Grid.RowDefinitions>
                
                <!-- Row 0: Question Number + Progress Dots - zakotwiczone na dole tego wiersza -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Spacing="25"
                            Margin="0,0,0,15">
                    
                    <TextBlock x:Name="QuestionNumberText"
                               FontSize="26"
                               Foreground="#8cc747"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Row 1: Question Text + Image - wyœrodkowane, bez marginesów bocznych -->
                <Grid Grid.Row="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Question text -->
                        <RowDefinition Height="*"/>    <!-- Image fills remaining space -->
                    </Grid.RowDefinitions>
                    
                    <!-- Question Text -->
                    <TextBlock x:Name="QuestionText"
                               Grid.Row="0"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               MaxWidth="1800"
                               Margin="20,0,20,15"/>

                    <!-- Image - skaluje siê i wype³nia przestrzeñ -->
                    <Border x:Name="QuestionImageBorder"
                            Grid.Row="1"
                            Background="#333739"
                            CornerRadius="8"
                            Padding="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="40,20,40,20"
                            MaxHeight="450">
                        <Image x:Name="QuestionImage"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>

            <!-- Results View -->
            <StackPanel x:Name="ResultsPanel"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="30"
                        IsVisible="False">

                <TextBlock x:Name="CategoryNameText"
                           FontSize="32"
                           Foreground="#8cc747"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <TextBlock x:Name="ScoreText"
                           FontSize="42"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>

                <TextBlock x:Name="TimeText"
                           FontSize="32"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <StackPanel Orientation="Vertical"
                            Spacing="15"
                            HorizontalAlignment="Center">
                    
                    <Border Classes="category"
                            MinWidth="300"
                            MinHeight="130"
                            MaxWidth="320">
                        <Grid>
                            <TextBlock Text="Graj ponownie"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       Padding="10"/>
                        </Grid>
                    </Border>
                    
                    <Border CornerRadius="25"
                            Width="50"
                            Height="50"
                            Background="#333739"
                            HorizontalAlignment="Center">
                        <TextBlock Text="A"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!-- Row 2: Answers - zakotwiczone na dole -->
            <Grid Grid.Row="2"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,20">
                <StackPanel x:Name="AnswersStack"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Spacing="12"/>
            </Grid>
        </Grid>
    </Viewbox>
</Window>